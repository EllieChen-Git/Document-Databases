<h1>Books</h1>

<a href="/books/new">Create New Book</a>

{{#each books}}
    <div>
        <p>Name: {{ this.name }}</p>
    </div>
    <a href="/books/{{this._id}}">View Book</a>
    {{!-- {{ In regular http requests, we only have get & post }} --}}
    <a href="/books/{{this._id}}?_method=DELETE">Delete Book</a>
      {{!-- {{ Change method to delete }} --}}
      
      {{!-- <a href="/books/{{this._id}}?_method=PUT">Edit</a> --}}
      <a href="/books/{{this._id}}/edit">Edit Book</a>
{{/each}}